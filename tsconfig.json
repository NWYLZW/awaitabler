{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "awaitabler": ["./src"],
      "awaitabler/*": ["./src/*"],
      "//chii/*": ["./playground/external/devtools-frontend/front_end/*"],
    }
  },
  "include": ["src", "./playground/src", "scripts/build.ts"],
  "exclude": ["src/dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
